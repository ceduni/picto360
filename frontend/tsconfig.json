{
  "compilerOptions": {
    "target": "ES2022",        
    "jsx": "react-jsx",
    "module": "commonjs",                                
    "lib": ["dom", "ES6"],
    "rootDir": "./",                                  
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowJs": true,                                
    "outDir": "./",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,        
    "noImplicitAny": true,                              
    "skipLibCheck": true,
    "resolveJsonModule": true                               
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}